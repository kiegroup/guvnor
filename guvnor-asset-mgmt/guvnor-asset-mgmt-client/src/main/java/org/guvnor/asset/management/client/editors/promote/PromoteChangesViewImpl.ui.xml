<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:gwt='urn:import:com.google.gwt.user.client.ui'
             xmlns:b='urn:import:org.gwtbootstrap3.client.ui'>

    <ui:with field="i18n"
             type="org.guvnor.asset.management.client.i18n.Constants"/>


    <gwt:HTMLPanel>
        <b:Container fluid="true">
            <b:Row>
                <b:Column size="MD_12">
                    <b:Form type="HORIZONTAL">
                        <b:FieldSet>
                            <b:FormGroup>
                                <b:Column size="MD_2">
                                    <b:FormLabel for="chooseRepositoryBox" text="{i18n.Choose_Repository}"/>
                                </b:Column>
                                <b:Column size="MD_5">
                                    <b:ListBox ui:field="chooseRepositoryBox"/>
                                </b:Column>
                            </b:FormGroup>

                            <b:FormGroup>
                                <b:Column size="MD_2">
                                    <b:FormLabel for="chooseSourceBranchBox">
                                        <ui:text from="{i18n.Choose_Source_Branch}"/>
                                    </b:FormLabel>
                                </b:Column>
                                <b:Column size="MD_5">
                                    <b:ListBox ui:field="chooseSourceBranchBox"/>
                                </b:Column>
                            </b:FormGroup>

                            <b:FormGroup>
                                <b:Column size="MD_2">
                                    <b:FormLabel for="chooseTargetBranchBox">
                                        <ui:text from="{i18n.Choose_Destination_Branch}"/>
                                    </b:FormLabel>
                                </b:Column>
                                <b:Column size="MD_5">
                                    <b:ListBox ui:field="chooseTargetBranchBox"/>
                                </b:Column>
                            </b:FormGroup>

                            <b:FormGroup>
                                <b:Column size="MD_5" offset="MD_2">
                                    <b:Button type="PRIMARY" ui:field='promoteButton' text="{i18n.Promote_Assets}"/>
                                </b:Column>
                            </b:FormGroup>
                        </b:FieldSet>
                    </b:Form>
                </b:Column>
            </b:Row>
        </b:Container>
    </gwt:HTMLPanel>
</ui:UiBinder>