@if{kbase.hasConfig()}
	<drools:configuration>
@if{kbase.mbeans != null}      <drools:mbeans enabled="@{kbase.mbeans}" />@end{}
@if{kbase.eventProcessingMode != null}      <drools:event-processing-mode mode="@{kbase.eventProcessingMode.toExternalForm().toUpperCase()}" />@end{}
@if{kbase.assertBehavior != null}      <drools:assert-behavior mode="@{kbase.assertBehavior.toString()}" />@end{}
@if{kbase.maxThreads != null}      <drools:multithread enabled="true" max-threads="@{kbase.maxThreads}" />@end{}
    </drools:configuration>@end{}
