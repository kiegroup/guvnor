  <listener>
    <listener-class>org.drools.guvnor.server.repository.SafeWeldListener</listener-class>
  </listener>

  <context-param>
    <param-name>javax.ws.rs.Application</param-name>
    <param-value>org.drools.guvnor.server.jaxrs.GuvnorRestApplication</param-value>
  </context-param>
  <context-param>
    <param-name>resteasy.servlet.mapping.prefix</param-name>
    <param-value>/rest</param-value>
  </context-param>
  <context-param>
    <param-name>resteasy.providers</param-name>
    <param-value>org.drools.guvnor.server.jaxrs.providers.atom.AtomEntryProvider,org.drools.guvnor.server.jaxrs.providers.atom.AtomFeedProvider,org.drools.guvnor.server.security.BasicAuthentication</param-value>
  </context-param>

  <context-param>
    <param-name>resteasy.injector.factory</param-name>
    <param-value>org.jboss.resteasy.cdi.CdiInjectorFactory</param-value>
  </context-param>

