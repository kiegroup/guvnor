<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:gwt="urn:import:com.google.gwt.user.client.ui"
    >

  <ui:with field="i18n" type="org.kie.guvnor.client.messages.Constants" />

  <gwt:VerticalPanel width="100%" height="100%" spacing="10">
    <gwt:Grid cellSpacing="6">
      <gwt:row>
        <gwt:customCell>
          <gwt:Label text="{i18n.MBeansColon}"/>
        </gwt:customCell>
        <gwt:customCell>
          <gwt:ListBox ui:field="listMBeans"/>
        </gwt:customCell>
      </gwt:row>
      <gwt:row>
        <gwt:customCell>
          <gwt:Label text="{i18n.EventProcessingModeColon}"/>
        </gwt:customCell>
        <gwt:customCell>
          <gwt:ListBox ui:field="listEventProcessingMode"/>
        </gwt:customCell>
      </gwt:row>
      <gwt:row>
        <gwt:customCell>
          <gwt:Label text="{i18n.AssertBehaviorColon}"/>
        </gwt:customCell>
        <gwt:customCell>
          <gwt:ListBox ui:field="listAssertBehavior"/>
        </gwt:customCell>
      </gwt:row>
    </gwt:Grid>
    <gwt:DisclosurePanel>
      <gwt:header>Assets Security Information</gwt:header>
      <gwt:VerticalPanel>
        <gwt:Grid cellSpacing="6">
          <gwt:row>
            <gwt:customCell>
              <gwt:Label text="{i18n.EnableAuthentication}"/>
            </gwt:customCell>
            <gwt:customCell>
              <gwt:CheckBox ui:field="checkEnabledAuthentication"/>
            </gwt:customCell>
          </gwt:row>
          <gwt:row>
            <gwt:customCell>
              <gwt:Label text="{i18n.UserName}"/>
            </gwt:customCell>
            <gwt:customCell>
              <gwt:TextBox ui:field="textAssetsUser"/>
            </gwt:customCell>
          </gwt:row>
          <gwt:row>
            <gwt:customCell>
              <gwt:Label text="{i18n.Password}"/>
            </gwt:customCell>
            <gwt:customCell>
              <gwt:TextBox ui:field="textAssetsPassword"/>
            </gwt:customCell>
          </gwt:row>
        </gwt:Grid>
      </gwt:VerticalPanel>
    </gwt:DisclosurePanel>
  </gwt:VerticalPanel>

</ui:UiBinder>
