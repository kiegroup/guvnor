<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:gwt="urn:import:com.google.gwt.user.client.ui"
    xmlns:guvnor='urn:import:org.drools.guvnor.client.common'>

  <ui:with field='images' type='org.drools.guvnor.client.resources.Images'/>

  <ui:with field="i18n" type="org.drools.guvnor.client.messages.Constants" />

  <gwt:HTMLPanel width="100%">
    <table style='width:100%; border-collapse:collapse;'>
        <tr>
            <td style="text-align:right;"><b><gwt:Label ui:field="labelName" text="{i18n.Name}:"></gwt:Label></b></td>
            <td><gwt:TextBox ui:field="txtName"></gwt:TextBox></td>
        </tr>
        <tr>
            <td style="text-align:right;"><b><gwt:Label ui:field="labelDescr" text="{i18n.Description}:"></gwt:Label></b></td>
            <td><gwt:TextBox ui:field="txtDescription"></gwt:TextBox></td>
        </tr>
        <tr>
            <td colspan="2"><b><gwt:Label text="{i18n.Packages}:"></gwt:Label></b></td>
        </tr>
        <tr width="100%" height="100%">
            <td colspan="2" width="100%" height="100%">
                <gwt:ScrollPanel ui:field="sclTreePanel" width="100%" height="150px">
                  <gwt:Tree ui:field="packageTree"></gwt:Tree>
              </gwt:ScrollPanel>
            </td>
        </tr>
    </table>
  </gwt:HTMLPanel>
</ui:UiBinder>
