<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:gwt="urn:import:com.google.gwt.user.client.ui">

  <ui:with field="i18n" type="org.drools.guvnor.client.messages.Constants"/>

  <ui:style>
    .palleteLabel {
      text-align: center;
      font-weight: bold;
    }
  </ui:style>

  <gwt:HorizontalPanel width="100%">
    <gwt:VerticalPanel spacing="10" width="20%">
      <gwt:Label text="Pallete" styleName="{style.palleteLabel}"/>
      <gwt:Button width="150px" ui:field="btnAssetResource" text="Add Asset..."/>
      <gwt:Button width="150px" ui:field="btnRemoveSelected" text="Remove Selected"/>
      <gwt:Button width="150px" ui:field="btnArtifacts" text="Dependencies..."/>
      <gwt:Button width="150px" ui:field="btnDownloadWar" text="Download WAR"/>
    </gwt:VerticalPanel>
    <gwt:VerticalPanel width="80%">
      <gwt:HorizontalPanel width="100%">
        <gwt:Label text="Protocol: "/>
        <gwt:ListBox ui:field="listProtocol"/>
        <gwt:Label text="Polling Frequency: "/>
        <gwt:TextBox ui:field="pollingFrequency" text="60" maxLength="4" width="40px"/>
      </gwt:HorizontalPanel>
      <gwt:HorizontalPanel width="100%">
        <gwt:ScrollPanel height="300px">
          <gwt:Tree ui:field="resourceTree"/>
        </gwt:ScrollPanel>
      </gwt:HorizontalPanel>
    </gwt:VerticalPanel>
  </gwt:HorizontalPanel>
</ui:UiBinder>
