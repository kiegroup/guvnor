<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:gwt="urn:import:com.google.gwt.user.client.ui"
    xmlns:guvnor='urn:import:org.drools.guvnor.client.common'>

    <ui:with field='images' type='org.drools.guvnor.client.resources.Images'/>

    <ui:with field="i18n" type="org.drools.guvnor.client.messages.Constants" />

    <gwt:HorizontalPanel width="100%">
        <gwt:VerticalPanel>
            <gwt:Label text="{i18n.AddNewResourceElement}"></gwt:Label>
            <gwt:Button ui:field="btnPackageResource" text="{i18n.Package}"></gwt:Button>
            <gwt:Button ui:field="btnAssetResource" text="{i18n.Asset}"></gwt:Button>
        </gwt:VerticalPanel>
        <gwt:VerticalPanel width="100%">
            <gwt:HorizontalPanel ui:field="pnlURL"></gwt:HorizontalPanel>
            <gwt:TextArea ui:field="editorArea" width="100%"></gwt:TextArea>
        </gwt:VerticalPanel>
        
    </gwt:HorizontalPanel>
</ui:UiBinder>
