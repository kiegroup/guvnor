<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.drools</groupId>
    <artifactId>guvnor</artifactId>
    <version>5.5.1-SNAPSHOT</version>
  </parent>

  <artifactId>guvnor-distribution-wars</artifactId>
  <packaging>pom</packaging>

  <name>Guvnor distribution wars</name>
  <description>
    This is the guvnor-distribution-wars module which builds the download wars for different application servers
    and the standalone application, which are then packaged by the guvnor-distribution module.
  </description>

  <build>
    <plugins>
      <plugin>
        <groupId>com.google.code.maven-config-processor-plugin</groupId>
        <artifactId>maven-config-processor-plugin</artifactId>
        <version>2.2</version>
        <configuration>
          <transformations>
            <transformation>
              <!-- Note: going outside the module dir is bad, but it is not fetching generated files -->
              <input>../guvnor-webapp-drools/src/main/webapp/WEB-INF/web.xml</input>
              <config>src/main/config-processor-filter/jboss-as-7_0/web_xml-filter.xml</config>
              <output>config-processor-filtered/jboss-as-7_0/WEB-INF/web.xml</output>
            </transformation>
          </transformations>
          <namespaceContexts>
            <j>http://java.sun.com/xml/ns/javaee</j>
          </namespaceContexts>
        </configuration>
        <executions>
          <execution>
            <goals>
              <goal>process</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-assembly-plugin</artifactId>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>single</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <finalName>guvnor-${project.version}</finalName>
          <descriptors>
            <descriptor>src/main/assembly/assembly-guvnor-jboss-eap-5_1.xml</descriptor>
            <descriptor>src/main/assembly/assembly-guvnor-jboss-as-7_0.xml</descriptor>
            <descriptor>src/main/assembly/assembly-guvnor-tomcat-6_0.xml</descriptor>
            <descriptor>src/main/assembly/assembly-guvnor-weblogic-12c.xml</descriptor>
          </descriptors>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <dependencies>
    <!-- Internal dependencies -->
    <dependency>
      <groupId>org.drools</groupId>
      <artifactId>guvnor-webapp-drools</artifactId>
      <type>war</type>
    </dependency>
    <dependency><!-- Only used by JBoss AS 5.1: Avoids ClassCastException on JBoss AS 5.1 for EAP with CXF extension -->
      <groupId>org.apache.cxf</groupId>
      <artifactId>cxf-rt-transports-jms</artifactId>
      <version>${cxf.version}</version>
    </dependency>
    <dependency><!-- Only used by JBoss AS 5.1: Avoids ClassCastException on JBoss AS 5.1 for EAP with CXF extension -->
      <groupId>org.apache.cxf</groupId>
      <artifactId>cxf-rt-bindings-corba</artifactId>
      <version>${cxf.version}</version>
    </dependency>
  </dependencies>

</project>
