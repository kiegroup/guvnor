<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

  <!-- Note: This works on jboss-eap-6 and jboss-as-7.1.2 -->
  <id>jboss-eap-6</id>
  <formats>
    <format>war</format>
  </formats>

  <includeBaseDirectory>false</includeBaseDirectory>

  <dependencySets>
    <dependencySet>
      <includes>
        <include>org.drools:guvnor-webapp-drools:war</include>
      </includes>
      <outputDirectory>.</outputDirectory>
      <unpack>true</unpack>
      <unpackOptions>
        <excludes>
          <!-- config -->
          <exclude>META-INF/context.xml</exclude>
          <exclude>WEB-INF/jetty-env.xml</exclude>
          <exclude>WEB-INF/faces-config.xml</exclude>
          <!-- log -->
          <exclude>WEB-INF/classes/log4j.xml</exclude>
          <exclude>WEB-INF/lib/slf4j*</exclude>
          <exclude>WEB-INF/lib/log4j*</exclude>
          <exclude>WEB-INF/lib/commons-logging-*.jar</exclude>
          <!-- lib -->
          <exclude>WEB-INF/lib/wsdl4j-*.jar</exclude>
          <exclude>WEB-INF/lib/jaxen-*.jar</exclude>
          <exclude>WEB-INF/lib/guava-*.jar</exclude>
          <exclude>WEB-INF/lib/cal10n-*.jar</exclude>
          <exclude>WEB-INF/lib/ejb-api*</exclude>
          <exclude>WEB-INF/lib/javassist*</exclude>
          <exclude>WEB-INF/lib/jaxb*</exclude>
          <exclude>WEB-INF/lib/jta*</exclude>
          <exclude>WEB-INF/lib/persistence*</exclude>
          <exclude>WEB-INF/lib/xerces*</exclude>
          <exclude>WEB-INF/lib/xml-apis*</exclude>
          <exclude>WEB-INF/lib/geronimo*</exclude>
          <exclude>WEB-INF/lib/activation*</exclude>
          <exclude>WEB-INF/lib/jsf*</exclude>
          <exclude>WEB-INF/lib/mail*</exclude>
          <exclude>WEB-INF/lib/dom4j-*</exclude>
          <exclude>WEB-INF/lib/jsr*</exclude>
          <exclude>WEB-INF/lib/hibernate*</exclude>
          <exclude>WEB-INF/lib/jboss*</exclude>
          <exclude>WEB-INF/lib/javax*</exclude>
          <exclude>WEB-INF/lib/cdi-api*</exclude>
          <exclude>WEB-INF/lib/servlet-api*</exclude>
          <exclude>WEB-INF/lib/stax*</exclude>
          <exclude>WEB-INF/lib/gwt-servlet*</exclude>
          <exclude>WEB-INF/lib/woodstox-core-asl*</exclude>
        </excludes>
      </unpackOptions>
      <useStrictFiltering>true</useStrictFiltering>
    </dependencySet>
  </dependencySets>

</assembly>
