<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:gwt="urn:import:com.google.gwt.user.client.ui"
    xmlns:cellview="urn:import:com.google.gwt.user.cellview.client"
    xmlns:guvnor-pager="urn:import:org.drools.guvnor.client.widgets.tables">

  <ui:with field='images' type='org.drools.guvnor.client.resources.ImagesCore'/>

  <ui:with field="i18n" type="org.drools.guvnor.client.messages.ConstantsCore" />

  <gwt:VerticalPanel>
    <gwt:HorizontalPanel>
      <gwt:Button ui:field="restoreSelectedAssetButton" text='{i18n.RestoreSelectedAsset}'/>
      <gwt:Button ui:field="deleteSelectedAssetButton" text='{i18n.DeleteSelectedAsset}'/>
      <gwt:Button ui:field="refreshButton" text='{i18n.refreshList}'/>
      <gwt:Button ui:field="openSelectedButton" text='{i18n.openSelected}'/>
      <gwt:Button ui:field="openSelectedToSingleTabButton" text='{i18n.openSelectedToSingleTab}'/>
      <gwt:Button visible="false" ui:field="archiveSelectedButton" text='{i18n.ArchiveSelected}' />
      <gwt:ToggleButton ui:field="columnPickerButton"/>
      <gwt:Image ui:field="feedImage" resource='{images.feed}'></gwt:Image>
    </gwt:HorizontalPanel>
    <cellview:CellTable ui:field="cellTable"/>
    <guvnor-pager:GuvnorSimplePager ui:field="pager"/>
  </gwt:VerticalPanel>

</ui:UiBinder>
