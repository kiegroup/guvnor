<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:kie="urn:import:org.uberfire.ext.widgets.common.client.common.popups"
             xmlns:select="urn:import:org.gwtbootstrap3.extras.select.client.ui">

    <ui:with field="i18n" type="org.uberfire.ext.widgets.core.client.resources.i18n.CoreConstants"/>

    <g:HTMLPanel>
        <kie:BaseModal ui:field="popup" title="{i18n.CreateRepository}" dataBackdrop="STATIC" dataKeyboard="true" fade="true">
            <b:ModalBody>
                <b:Form type="HORIZONTAL">
                    <b:FieldSet>
                        <b:Legend>
                            <ui:text from="{i18n.RepoInformation} Bla Bla"/>
                        </b:Legend>
                        <b:FormGroup ui:field="nameGroup">
                            <b:FormLabel for="name" showRequiredIndicator="true" text="{i18n.RepoName}" addStyleNames="col-md-2"/>
                            <b:Column size="MD_10">
                                <b:TextBox b:id="name" ui:field="nameTextBox" placeholder="{i18n.RepoNameHolder}"/>
                                <b:HelpBlock ui:field="nameHelpBlock"/>
                            </b:Column>
                        </b:FormGroup>
                        <b:FormGroup ui:field="organizationalUnitGroup">
                            <b:FormLabel for="ou" ui:field="ouLabel" text="{i18n.OrganizationalUnit}" showRequiredIndicator="true" addStyleNames="col-md-2"/>
                            <b:Column size="MD_10">
                                <select:Select b:id="ou" ui:field="organizationalUnitDropdown"/>
                                <b:HelpBlock ui:field="organizationalUnitHelpBlock"/>
                            </b:Column>
                        </b:FormGroup>
                    </b:FieldSet>
                </b:Form>
            </b:ModalBody>
            <b:ModalFooter>
                <b:Button type="DEFAULT" ui:field="cancel">
                    <ui:text from="{i18n.Cancel}"/>
                </b:Button>
                <b:Button icon="FOLDER_O" type="PRIMARY" ui:field="create">
                    <ui:text from="{i18n.Create}"/>
                </b:Button>
            </b:ModalFooter>
        </kie:BaseModal>
    </g:HTMLPanel>
</ui:UiBinder>