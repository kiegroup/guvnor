<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.drools</groupId>
    <artifactId>guvnor</artifactId>
    <version>5.3.0-SNAPSHOT</version>
  </parent>

  <artifactId>guvnor-distribution</artifactId>
  <packaging>pom</packaging>

  <name>Guvnor distribution</name>
  <description>
    Builds the download zip of Guvnor.
  </description>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-assembly-plugin</artifactId>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>single</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <descriptors>
            <descriptor>src/main/assembly/assembly-guvnor.xml</descriptor><!-- Must be last -->
          </descriptors>
          <appendAssemblyId>false</appendAssemblyId>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <profiles>
    <profile>
      <id>soaProfile</id>
      <activation>
        <property>
          <name>soa</name>
        </property>
      </activation>
      <build>
        <plugins>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-assembly-plugin</artifactId>
            <executions>
              <execution>
                <id>assemble-bulk-importer-example</id>
                <phase>package</phase>
                <goals>
                  <goal>single</goal>
                </goals>
                <configuration>
                  <appendAssemblyId>true</appendAssemblyId>
                  <descriptors>
                    <descriptor>src/main/assembly/assembly-bulk-importer-example.xml</descriptor>
                  </descriptors>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>

  <dependencies>
    <!-- Internal dependencies -->
    <dependency>
      <groupId>org.drools</groupId>
      <artifactId>guvnor-repository-connector-jcr</artifactId>
      <version>${guvnor.version}</version>
      <classifier>sources</classifier>
    </dependency>
    <dependency>
      <groupId>org.drools</groupId>
      <artifactId>guvnor-repository-connector-jackrabbit</artifactId>
      <version>${guvnor.version}</version>
      <classifier>sources</classifier>
    </dependency>
    <dependency>
      <groupId>org.drools</groupId>
      <artifactId>guvnor-repository-connector-modeshape</artifactId>
      <version>${guvnor.version}</version>
      <classifier>sources</classifier>
    </dependency>
    <dependency>
      <groupId>org.drools</groupId>
      <artifactId>guvnor-repository</artifactId>
      <version>${guvnor.version}</version>
      <classifier>sources</classifier>
    </dependency>
    <dependency>
      <groupId>org.drools</groupId>
      <artifactId>droolsjbpm-ide-common</artifactId>
      <version>${guvnor.version}</version>
      <classifier>sources</classifier>
    </dependency>
    <dependency>
      <groupId>org.drools</groupId>
      <artifactId>guvnor-webapp</artifactId>
      <version>${guvnor.version}</version>
      <classifier>sources</classifier>
    </dependency>
    <dependency>
      <groupId>org.drools</groupId>
      <artifactId>guvnor-distribution-wars</artifactId>
      <type>war</type>
      <version>${guvnor.version}</version>
      <classifier>jboss-as-5.1</classifier>
    </dependency>
    <dependency>
      <groupId>org.drools</groupId>
      <artifactId>guvnor-distribution-wars</artifactId>
      <type>war</type>
      <version>${guvnor.version}</version>
      <classifier>jboss-as-6.0</classifier>
    </dependency>
    <dependency>
      <groupId>org.drools</groupId>
      <artifactId>guvnor-distribution-wars</artifactId>
      <type>war</type>
      <version>${guvnor.version}</version>
      <classifier>tomcat-6.0</classifier>
    </dependency>

    <!-- Examples -->
    <dependency>
      <groupId>org.drools</groupId>
      <artifactId>guvnor-examples</artifactId>
    </dependency>
    <dependency>
      <groupId>org.drools</groupId>
      <artifactId>guvnor-examples</artifactId>
      <version>${guvnor.version}</version>
      <classifier>sources</classifier>
    </dependency>

    <!-- Note: The javadocs are not distributed at the moment -->
    <dependency>
      <groupId>org.drools</groupId>
      <artifactId>guvnor-docs</artifactId>
      <type>jdocbook</type>
    </dependency>
  </dependencies>

</project>
