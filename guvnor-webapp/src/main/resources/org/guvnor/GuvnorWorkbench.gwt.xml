<!DOCTYPE module PUBLIC "-//Google Inc.//DTD Google Web Toolkit 2.4.0//EN"
    "http://google-web-toolkit.googlecode.com/svn/tags/2.5.0/distro-source/core/src/gwt-module.dtd">
<module>
  <!-- Uberfire dependencies -->
  <inherits name="org.uberfire.UberfireClientAll"/>
  <inherits name="org.uberfire.client.views.Bootstrap2"/>

  <!-- Uberfire Extensions - Common Editor -->
  <inherits name="org.uberfire.ext.editor.commons.UberfireCommonsEditorClient"/>

  <!-- Uberfire Extensions - Core Widgets -->
  <inherits name="org.uberfire.ext.widgets.core.UberfireWidgetsCore"/>

  <!-- Guvnor dependencies -->
  <inherits name='org.guvnor.structure.GuvnorStructureClient'/>
  <inherits name="org.guvnor.inbox.GuvnorInboxClient"/>
  <inherits name="org.guvnor.m2repo.GuvnorM2RepoEditorClient"/>
  <inherits name='org.guvnor.common.services.GuvnorServicesAPI'/>
  <inherits name="org.guvnor.common.services.project.GuvnorProjectAPI"/>
  <inherits name="org.guvnor.common.services.workingset.GuvnorWorkingsetAPI"/>
  <inherits name="org.guvnor.common.services.workingset.GuvnorWorkingsetClient"/>
  <inherits name="org.guvnor.messageconsole.GuvnorMessageConsoleClient"/>
  <inherits name='org.guvnor.organizationalunit.manager.GuvnorOrganizationalUnitManager'/>

  <!-- Uberfire Extensions - Runtime Plugin -->
  <inherits name="org.uberfire.ext.plugin.RuntimePluginClient"/>


  <!-- Uberfire Extensions - Apps -->
  <inherits name="org.uberfire.ext.apps.UberfireAppsClient"/>
  <inherits name="org.guvnor.common.services.project.GuvnorProjectClient"/>

  <!-- Wires dependencies -->
  <inherits name="com.emitrom.lienzo.Lienzo"/>
  <inherits name="org.uberfire.ext.wires.core.WiresCoreClient"/>
  <inherits name="org.uberfire.ext.wires.core.scratchpad.WiresCoreScratchPad"/>
  <inherits name="org.uberfire.ext.wires.core.trees.WiresCoreTrees"/>
  <inherits name="org.uberfire.ext.wires.bayesian.network.parser.BayesianNetworkAPI"/>
  <inherits name="org.uberfire.ext.wires.bayesian.network.BayesianNetworkClient"/>

  <!-- Dashbuilder dependencies -->
  <inherits name="org.dashbuilder.CommonClient"/>

  <inherits name="org.dashbuilder.DatasetAPI"/>
  <inherits name="org.dashbuilder.DatasetShared"/>
  <inherits name="org.dashbuilder.DatasetClient"/>

  <inherits name="org.dashbuilder.DisplayerAPI"/>
  <inherits name="org.dashbuilder.DisplayerClient"/>
  <inherits name="org.dashbuilder.DisplayerScreen"/>

  <inherits name="org.dashbuilder.renderer.DefaultRenderer"/>
  <inherits name="org.dashbuilder.CommonWidgets"/>

  <inherits name="org.dashbuilder.DisplayerEditor"/>
  <inherits name="org.dashbuilder.renderer.GChartsRenderer"/>
  <inherits name="org.dashbuilder.renderer.LienzoChartsRenderer"/>

  <!-- Specify the application specific style sheet. -->
  <stylesheet src='css/guvnor-workbench.css'/>

  <!-- Specify the paths for translatable code -->
  <source path='client'/>
  <source path='shared'/>

  <!-- i18n -->
  <extend-property name="locale" values="es_ES"/>
  <extend-property name="locale" values="fr_FR"/>
  <extend-property name="locale" values="ja_JP"/>
  <extend-property name="locale" values="pt_BR"/>
  <extend-property name="locale" values="zh_CN"/>

</module>
