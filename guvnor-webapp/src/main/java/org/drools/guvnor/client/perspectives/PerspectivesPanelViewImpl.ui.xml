<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:gwt='urn:import:com.google.gwt.user.client.ui'
             xmlns:guvnor-explorer='urn:import:org.drools.guvnor.client.explorer'
             xmlns:guvnor-navigation='urn:import:org.drools.guvnor.client.explorer.navigation'>

  <ui:with field="i18n" type="org.drools.guvnor.client.messages.Constants"/>
  <ui:with field='guvnorResources' type='org.drools.guvnor.client.resources.GuvnorResources'/>
  <ui:with field='images' type='org.drools.guvnor.client.resources.Images'/>
  <ui:with field='titlePanelHeight'
           type='org.drools.guvnor.client.perspectives.PerspectivesPanelViewImpl.TitlePanelHeight'/>

  <gwt:DockLayoutPanel unit='EM'>
    <gwt:north size='{titlePanelHeight.getHeight}'>
      <gwt:VerticalPanel width="100%">
        <gwt:HTMLPanel ui:field="titlePanel" styleName='{guvnorResources.headerCss.mainClass}'>
          <div class='{guvnorResources.headerCss.logoClass}'>
            <gwt:Image resource='{images.headerLogo}'/>
          </div>
          <div class='{guvnorResources.headerCss.controlsClass}'>
            <div class='{guvnorResources.headerCss.userInfoClass}'>
              <small>
                <ui:text from='{i18n.WelcomeUser}'/>
                <span ui:field="userName"/>
                <gwt:Anchor ui:field="logoutAnchor" href="javascript:;">[<ui:text from='{i18n.SignOut}'/>]</gwt:Anchor>
              </small>
            </div>
            <div class='{guvnorResources.headerCss.perspectivesClass}'>
              <gwt:ListBox ui:field="perspectives" multipleSelect="false" visibleItemCount="1"/>
            </div>
          </div>
          <div style="clear:both;"></div>
        </gwt:HTMLPanel>
      </gwt:VerticalPanel>
    </gwt:north>
    <gwt:center>
      <gwt:SplitLayoutPanel>
        <gwt:west size="250">
          <guvnor-navigation:NavigationPanel ui:field="navigationPanel"/>
        </gwt:west>
        <gwt:center>
          <guvnor-explorer:ExplorerViewCenterPanel ui:field="explorerCenterPanel"/>
        </gwt:center>
      </gwt:SplitLayoutPanel>
    </gwt:center>
  </gwt:DockLayoutPanel>

</ui:UiBinder>
