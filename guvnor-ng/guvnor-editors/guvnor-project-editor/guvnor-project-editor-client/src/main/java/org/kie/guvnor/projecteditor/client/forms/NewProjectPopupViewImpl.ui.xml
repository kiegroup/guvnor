<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:gwt='urn:import:com.google.gwt.user.client.ui'>

  <ui:with field="i18n" type="org.kie.guvnor.projecteditor.client.resources.i18n.ProjectEditorConstants"/>
  <ui:with field="resources" type="org.kie.guvnor.projecteditor.client.resources.ProjectEditorResources"/>

  <gwt:HTMLPanel>
    <gwt:HorizontalPanel>
      <gwt:Label text='{i18n.Name}'/>
      <gwt:TextBox ui:field="nameTextBox"/>
    </gwt:HorizontalPanel>
    <div style="float:right;">
      <gwt:HorizontalPanel>
        <gwt:Button text="Ok" ui:field="okButton"/>
        <gwt:Button text="Cancel" ui:field="cancelButton"/>
      </gwt:HorizontalPanel>
    </div>
  </gwt:HTMLPanel>

</ui:UiBinder>
