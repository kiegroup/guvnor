<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.guvnor</groupId>
    <artifactId>guvnor</artifactId>
    <version>6.3.0-SNAPSHOT</version>
  </parent>

  <artifactId>guvnor-webapp-distribution-wars</artifactId>
  <packaging>pom</packaging>

  <name>Guvnor - WebApp - Distribution Wars</name>
  <description>Guvnor - WebApp - Distribution Wars</description>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-assembly-plugin</artifactId>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>single</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <finalName>guvnor-webapp-${project.version}</finalName>
          <descriptors>
            <descriptor>src/main/assembly/assembly-guvnor-webapp-jboss-as-7_0.xml</descriptor>
            <descriptor>src/main/assembly/assembly-guvnor-webapp-jboss-eap-6_3.xml</descriptor>
          </descriptors>
          <archive>
            <addMavenDescriptor>false</addMavenDescriptor>
          </archive>
        </configuration>
      </plugin>

    </plugins>
  </build>

  <dependencies>
    <!-- Internal dependencies -->
    <dependency>
      <groupId>org.guvnor</groupId>
      <artifactId>guvnor-webapp</artifactId>
      <type>war</type>
    </dependency>

    <!-- External dependencies -->
    <dependency>
      <groupId>org.apache.ant</groupId>
      <artifactId>ant</artifactId>
    </dependency>

    <!-- JAAS authentication integration -->
    <dependency>
      <groupId>org.uberfire</groupId>
      <artifactId>uberfire-servlet-security</artifactId>
    </dependency>

    <!-- Tag library - used by not_authorized.jsp -->
    <dependency>
      <groupId>org.jboss.spec.javax.servlet.jstl</groupId>
      <artifactId>jboss-jstl-api_1.2_spec</artifactId>
    </dependency>

  </dependencies>

</project>